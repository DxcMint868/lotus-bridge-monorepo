{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "cache",
    "artifacts"
  ]
}